                            <div className={`text-sm font-medium mb-1 ${
                              isCurrentMonth ? 'text-gray-900 dark:text-white' : 'text-gray-400 dark:text-gray-600'
                            } ${isToday ? 'text-primary-600 dark:text-primary-400 font-bold' : ''}`}>
                              {format(startDate, 'd')}
                            </div>
